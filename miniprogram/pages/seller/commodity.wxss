.add {
  position: fixed;
  background-color: rgba(214, 147, 58, 0.842);
  color: white;
  padding: 20rpx;
  border-radius: 30rpx;
  bottom: 150rpx;
  right: 10rpx;
  font: bolder;
  font-size: 36rpx;
  z-index: 9999; 
}
.add:active{
  background-color: rgb(92, 92, 11);
}

.container1{
  background-color:  rgba(214, 147, 58, 0.842);
  padding:20rpx;
  display: flex;
}

.container1_1{
  display: grid;
  margin-left: 60rpx;
}


.secondary-nav {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  border-bottom: 1px solid #eaeaea;
}

.nav-item {
  padding: 15rpx 0;
  flex: 1;
  text-align: center;
  color: #333;
  cursor: pointer; /* 确保点击手势 */
}

.nav-item.active {
  color:  rgba(214, 147, 58, 0.842);
  border-bottom: 2rpx solid  rgba(214, 147, 58, 0.842);
  display:block;
}

.container2{
  padding:20rpx;
  background-color: rgb(235, 235, 216);
}




.container2_1{
  background-color: white;
  padding:20rpx;
  border-radius: 20rpx;
  margin-top: 60rpx
}

.container2_1_1{
  padding:10rpx;
  display: flex;
  border:1rpx solid rgba(214, 147, 58, 0.842) ;
  border-radius: 30rpx;
  /* border-bottom:1rpx solid rgba(214, 147, 58, 0.842) ; */
}

.container2_1_1_1{
  display: grid;
  justify-content: space-between; 
  margin-left: 30rpx;
}



.commodity_name{
  font-size: 40rpx;
