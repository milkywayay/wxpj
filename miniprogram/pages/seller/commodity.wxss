}

.allData{
  margin-top: 30rpx;
}





.box_item {
  border:1rpx  solid rgba(214, 147, 58, 0.5);
  background-color: rgb(253, 253, 253);
  margin-left: 25rpx;
  margin-right: 25rpx;
  border-radius: 20rpx;
  width: 100%;
  height: 300rpx;
  display: flex;
  border-radius: 30rpx;
  padding: 20rpx;
}

/* 滑动删除移动模块 */
.moveArea {
  display: flex;
  flex-direction: row;
  width: calc(100% + 120rpx);
  justify-content: center;
  left: -120rpx;
  height: 350rpx;
}
 
/* 滑动删除模块 */
.movableView {
  display: flex;
  flex-direction: row;
  width: calc(100% - 120rpx);
  z-index: 1001;
  left: 120rpx;
}
 

.itemDelet {
  position: absolute;
  right: 30rpx;
  line-height: 330rpx;
  background-color: #c72f24;
  margin-top: 3rpx;
  margin-right: 6rpx;
  border-bottom-right-radius: 20rpx;
  border-top-right-radius: 20rpx;
  width: 120rpx;
  text-align: right;
  padding-right: 20rpx;
  color: #fff;
}


