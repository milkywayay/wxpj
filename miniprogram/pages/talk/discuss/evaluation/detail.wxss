.container {
  padding: 30rpx;
}


.heading {
  font-size: 60rpx;
  font-weight: bolder;
}

.nickName {
  font-size: 30rpx;
}

.body {
  font-size: 35rpx;
  margin-top: 60rpx;
}

.container1 {
  display: flex;
  justify-content: space-between;
}

.container1_1 {
  display: flex;
}

.container1_1_1 {
  margin-left: 20rpx;
  display: grid;
}

.time {
  color: rgba(214, 147, 58, 0.842);
  font-size: 25rpx;
}


.photo-container {
  width: 230rpx;
  height: 230rpx;
  overflow: hidden;
  position: relative;
  /* margin: 10rpx; */
}

.avater {
  height: 80rpx;
  width: 80rpx;
  border-radius: 60rpx;
}


.discuss_photo {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  height: auto;
  width: 100%;
}







/* 第二部分 */

.container_down{
  position: fixed;
  bottom: 0rpx;
  padding-top: 20rpx;
  height: 200rpx;
  /* background-color: rgb(300, 300, 300); */
  width: 100%;
  border: 1rpx solid rgba(214, 147, 58, 0.842);
  display: flex;
  justify-content: space-around;
}

.cancel,
.submit,
.mySubmit {
  color: white;
  background-color: rgba(214, 147, 58, 0.842);
  height: 100rpx;
  width: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  border-radius: 30rpx;
  font-size: 40rpx;
  font-weight: bolder;
}

.cancel:active,
.submit:active,
.mySubmit:active{
  background-color: rgb(116, 96, 70);
}









