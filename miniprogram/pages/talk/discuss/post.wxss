.secondary-nav {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  border-bottom: 1px solid #eaeaea;
}

.nav-item {
  padding: 15rpx 0;
  flex: 1;
  text-align: center;
  color: #333;
  cursor: pointer; /* 确保点击手势 */
}

.nav-item.active {
  color:  rgba(214, 147, 58, 0.842);
  border-bottom: 2rpx solid  rgba(214, 147, 58, 0.842);
  display:block;
}

.main-content {
  flex: 1;
  padding: 20rpx;
}



.heading{
  font-size: 40rpx;
  font-weight: bolder;
}

.container1{
  border-bottom: 1rpx solid rgba(214, 147, 58, 0.842);
