.photo-container {
  width: 200rpx;
  height: 200rpx;
  overflow: hidden;
  position: relative;
  margin: 10px;
}

.discuss_photo {
  position:absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  height: auto;
  width: 100%;
}

.container_add_photo { 
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  overflow: hidden;
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
}

