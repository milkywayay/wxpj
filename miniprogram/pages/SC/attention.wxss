.container1{
  display: flex;
  margin: 60rpx;
  border-bottom: 1rpx solid rgba(214, 147, 58, 0.842);
  padding:10rpx;
}

.avater{
  height: 100rpx;
  width: 100rpx;
  border-radius: 60rpx;
}

.nickName{
  margin-left: 10rpx;
