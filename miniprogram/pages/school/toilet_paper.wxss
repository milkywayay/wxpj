.order {
  background-color: rgba(214, 147, 58, 0.842);
  color: white;
  margin-top: 200rpx;
  /* right: -220rpx; */
  float: right;
}



.order:active{
  background-color: rgb(67, 122, 122) ;
}


.container {
  display: flex;
  flex-direction: column;
  padding: 20px;
  background-color: #f5f5f5;
  margin-top: 100rpx;
}


.address_detail {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.address_detail_input {
  width: 100%;
  padding: 10px;
  font-size: 16px;
  border: 1px solid #ccc;
  border-radius: 5px;
  background-color: #fff;
  box-sizing: border-box;
  height: 300rpx;
}


.address_detail_input:focus {
  border-color: #007aff; /* 聚焦时的边框颜色 */
  outline: none;
  box-shadow: 0 0 5px rgba(0, 122, 255, 0.5); /* 聚焦时的阴影效果 */
}

.container_sex {
  display: flex;
  flex-direction: column;
  /* padding: 30rpx; */
  background-color: #f5f5f5;
}

/* 标题样式 */
.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
  margin-top:60rpx ;
}

/* 单选框组样式 */
.radio-group {
  display: flex;
  flex-direction: row;
  align-items: center;
}

/* 单选标签样式 */
.radio-label {
  display: flex;
  align-items: center;
  margin-right: 20px;
  font-size: 16px;
  color: #333;
}

/* 单选框样式 */
.radio-group radio {
  margin-right: 5px;
}




