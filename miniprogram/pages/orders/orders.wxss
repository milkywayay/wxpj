.container {
  display: flex;
  flex-direction: column;
}


.container1{
  padding-top: 20rpx;
  display: flex;
  justify-content: space-around;
}

.container2{
  display: flex;
  justify-content: space-between;
}


.secondary-nav {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  border-bottom: 1px solid #eaeaea;
}

.nav-item {
  padding: 15rpx 0;
  flex: 1;
  text-align: center;
  color: #333;
  cursor: pointer; /* 确保点击手势 */
}

.nav-item.active {
  color:  rgba(214, 147, 58, 0.842);
  border-bottom: 2rpx solid  rgba(214, 147, 58, 0.842);
  display:block;
}

.main-content {
  flex: 1;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.all{
  background-color: #fff;
  border-radius:20rpx ;
  margin-bottom: 30rpx;
}

.order-item {
  display: flex;
  align-items: center;
  margin: 10rpx 0;
}

.photo {
  width: 100rpx; /* 图片的宽度 */
  height: 100rpx; /* 图片的高度 */
  margin-right: 20rpx; /* 图片和文字之间的间距 */
}

.details {
  flex: 1; /* 让文字区域占据剩余空间 */
}

.payee, .pay_time, .money, .name {
  margin-bottom: 10rpx; /* 各个文本项之间的间距 */
}

.payee{
  margin-left: -120rpx;
  margin-bottom: 20rpx;
  font-size: larger;
  font-weight: bolder;
}






.box_item {
  /* border:1rpx  solid rgba(214, 147, 58, 0.5); */
  background-color: rgb(253, 253, 253);
  margin-left: 25rpx;
  margin-right: 25rpx;
  border-radius: 20rpx;
  width: 100%;
  height: 300rpx;
  display: flex;
  border-radius: 30rpx;
  padding: 20rpx;
}

/* 滑动删除移动模块 */
.moveArea {
  display: flex;
  flex-direction: row;
  width: calc(100% + 120rpx);
  justify-content: center;
  left: -120rpx;
  height: 350rpx;
}
 
/* 滑动删除模块 */
.movableView {
  display: flex;
  flex-direction: row;
  width: calc(100% - 120rpx);
  z-index: 1001;
  left: 120rpx;
}
 

.itemDelet {
  position: absolute;
  right: 30rpx;
  line-height: 330rpx;
  background-color: #c72f24;
  margin-top: 3rpx;
  margin-right: 6rpx;
  border-bottom-right-radius: 20rpx;
  border-top-right-radius: 20rpx;
  width: 120rpx;
  text-align: right;
  padding-right: 20rpx;
  color: #fff;
}


.cancel,
.pay,
.go_received{
  background-color: rgba(214, 147, 58, 0.842);
  padding:15rpx;
  border-radius: 40rpx;
  text-align: center;
  color: white;
  width: 250rpx;
  float: right;
  margin:10rpx;
  box-sizing: border-box;
  
}

.cancel:active,
.pay:active,
.go_received:active{
  background-color:rgb(122, 122, 204) ;
}


.received{
  color:#796c6c;
}

.over{
  color:#796c6c;
  margin-left: 400rpx;
}


.container01{
  display: flex;
  justify-content: space-between;
}

.money{
  flex:1
}

.number{
  flex:6
}

